<!DOCTYPE html>
<html>
	<head>
		<title>{{web.displayName}}</title>
		<link rel="stylesheet" type="text/css" href="css/index.css">
		<script src="js/index.js"></script>
		<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@900&display=swap" rel="stylesheet">
		<link rel="icon" type="image/png" href="img/favicon.ico">
	</head>
	<noscript>
		<h1>Status page requires JavaScript to function</h1>
	</noscript>
	<body>
		<div class="parent">
			<div class="header">
				<h1>
					{{web.displayName}}
				</h1>
			</div>
			<div class="status"> 
				<table id="statusTable">
					<tr id="tableHeader">
						<th>Name</th>
						<th>Description</th>
						<th>State</th>
						<th>Online</th>
						<th>Version</th>
					</tr>
				</table>
			</div>
			<div class="footer"> 
				<div class="footLeft"> 
					<p>
						Updating every: {{update}}s
					</p>
					<p id="lastUpdated">
						Last updated: Waiting
					</p>
					<p>
						Running version: v{{version}}
					</p>
				</div>
			</div>
		</div>
	</body>
	<script src="/socket.io/socket.io.js"></script>
	<script>
		const socket = io();
		update()

		socket.on("update", () => { update() })
	</script>
</html>